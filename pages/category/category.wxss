@import './categoryTemplate/categoryTemplate.wxss';
.sideBarBox{
   width: 27%;
   position: fixed;
   top: 1rpx;
   left: 0;
}
.category{
  border-top: 1rpx solid #DBDBDB;
  position: relative;
}
.sideBarList{
  width: 100%;
  font-size: 34rpx;
  box-sizing: border-box;
  background-color: #F8F8F8;
  padding: 30rpx 0 30rpx 25rpx;  
  letter-spacing: 45rpx;
  text-align: right;
}
.activeSideBar{
  background-color: white;
}
/* 分类右边开始 */
.categoryRightBox{
  position: absolute;
  right: 0;
  top: 1rpx;
  width:73%;
  padding-bottom: 20rpx;
}
.searchBox{
  width: 98%;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 1rpx 20rpx 8%;
  margin-bottom: 30rpx; 
}
.searchBox>input{
  display: inline-block; 
  background-color: #F7F7F7; 
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 13%; 
  padding-right: 13%; 
  width: 73%; 
  box-sizing: border-box; 
  border-radius: 50rpx; 
}
.searchBox image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 46rpx;
  left: 60rpx; 
}
.searchBox text{
  position: absolute;
  top: 16rpx;
  right: 9%;
}
.categorySecondLevel1{
  width: 100%;
  overflow: hidden;
}
.categorySecondLevel1:first-child{
  margin-top: 30rpx;
}
.categorySecondLevelTop{
  padding: 29rpx;
  font-size: 36rpx;
}
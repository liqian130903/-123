page{
  background-color: #F8F8F8;
}
/* 头部开始 */
.personalCenterTop{
  width: 100%;
  background-color: white;
  padding-left: 40rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #DBDBDB;
  margin-bottom: 15rpx;
}
.personalCenterTopLine{
  width: 100%;
  border-bottom: 1rpx solid #EEEEEE;
  overflow: hidden;
  padding: 30rpx 0;
  font-size: 32rpx;
  position: relative;
}
.personalCenterTopLine:nth-child(1){
  padding: 40rpx 0;
}
.personalCenterTopLine text:nth-child(2){
  float: right;
  margin-right: 40rpx;
  margin-top: -40rpx;
}
.personalCenterTopLine>image{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 25rpx;
}
.headerBox{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  background-color: #B8B8B8;
  border-radius: 50%;
  position: absolute;
  right: 0rpx;
  top: 50rpx;
}
.personalCenterTopLine:nth-child(5){
  border: 0;
}
/* 底部开始 */
.personalCenterBottom{
  width: 100%;
  background-color: white;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.personalCenterBottomLine{
  width: 100%;
  border-bottom: 1rpx solid #EEEEEE;
  overflow: hidden;
  padding: 30rpx 0;
  font-size: 32rpx;
}
.personalCenterBottomLine>text:nth-child(2){
  float: right;
  margin-right: 40rpx;
}
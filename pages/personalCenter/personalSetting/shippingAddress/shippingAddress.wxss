page{
  background-color: #F8F8F8;
}
.shippingAddress{
  border-top: 1rpx solid #DBDBDB;
}
.shippingAddressBox{
  width: 100%;
  background-color: white;
  margin-top: 10rpx;
  padding: 40rpx 0 40rpx 40rpx;
  overflow: hidden;
  font-size: 32rpx;
  box-sizing: border-box;
}
.shippingAddressLeft{
  float: left;
}
.leftLineBox>text:nth-child(2){
  margin-left: 20rpx;
}
.leftLineBox:nth-child(1){
  font-size: 34rpx;
}
.leftLineBox:nth-child(2){
  margin-top: 10rpx;
  color: #cccccc;
}
.shippingAddressRight{
  float: right;
  text-align: center;
  color: #FF6E6E;
  padding: 20rpx 40rpx;
  border-left: 1rpx solid #EAEAEA;
  margin-top: 10rpx;
  font-size: 34rpx;
}
/* 新增地址按钮 */
.addShippingAddress{
  width: 100%;
  padding: 25rpx 0;
  font-size: 32rpx;
  text-align: center;
  color: white;
  background-color: #FE6C5F;
  font-weight: 700;
  position: fixed;
  bottom: 0;
  left: 0;
}
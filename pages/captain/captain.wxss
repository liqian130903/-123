page{
  background-color: #F8F8F8;
}
.captain{
  width: 100%;
  /* border-top: 1rpx solid #DBDBDB; */
}
.captainNull{
  width: 45%;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#C93DE4), to(#FB8ADD));
  color: white;
  margin: 50% auto;
  text-align: center;
  border-radius: 12rpx;
}
/* 堡主头部开始 */
.captainContentTop{
  width: 100%;
  background-color: white;
  overflow: hidden;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #DBDBDB;
  margin-bottom: 15rpx;
}
.topLeft{
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  padding: 10rpx;
  background-color: #EDECE8;
}
.topLeft image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.topCenter{
  float: left;
  margin-left: 30rpx;
  font-size: 30rpx;
  padding-top: 5rpx;
}
.lineBox{
  margin-bottom: 10rpx;
}
.lineBox2{
  color: #A9A9A9;
}
.lineBox3{
  color:#8D8C8C;
}
.topRight{
  margin-top: 10rpx;
  float: right;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  padding: 10rpx;
  background-color: #EEEEEE;
  text-align: center;
  box-sizing: border-box;
}
.topRight image{
  width: 60%;
  height: 60%;
  margin-top: 20%;
}
/* 堡主分红开始 */
.dividendBox{
  width: 100%;
  background-color: white;
  padding:40rpx 40rpx 30rpx; 
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.dividendBoxName{
  font-size: 30rpx;
  color: #6D6D6D;
}
.dividendAmount{
  color: #FF3F40;
  font-size: 42rpx;
  margin-top: 30rpx;
}
.dividendProject{
  width: 100%;
  display: flex;
  font-size: 30rpx;
  color: #6D6D6D;
  margin-top: 30rpx;
}
.dividendProjectNum{
  flex: 1;
  text-align: center;
}
.dividendProjectNum:nth-child(2) view:nth-child(1){
  border-left: 1rpx solid #AAAAAA;
  border-right: 1rpx solid #AAAAAA; 
}
.dividendProjectNum view{
  margin-top: 5rpx;
}
/* 堡主底部内容开始 */
.captainBottom{
  width: 100%;
  background-color: white;
  display: flex;
  padding: 50rpx 0 40rpx;
}
.captainBottomRow{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.captainBottomRow image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
   margin-bottom: 15rpx; 
}
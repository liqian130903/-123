.inputID{
  border-top: 1rpx solid #DBDBDB;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
}
.inputBox{
  padding-top: 100rpx;
}
.inputBox view{
  color: #3E3E3E;
}
.inputBox input{
  width: 75%;
  height: 80rpx;
  margin: 10rpx auto 0;
  border-bottom: 1rpx solid #D0D0D0;
  padding: 20rpx;
}
.goShoppingBtn{
  width: 70%;
  box-sizing: border-box;
  padding: 26rpx 0;
  text-align: center;
  background-color: #800476;
  color: white;
  margin: 120rpx auto;
  letter-spacing: 10rpx;
}
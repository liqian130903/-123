/* pages/homepage/homepage.wxss */

@import './productTemplate/productTemplate.wxss';
@import './recommendTemplate/recommendTemplate.wxss';

page{
  background-color: rgb(245, 246, 247);
  /* height: 100%; */
}
.homepage{
  width: 100%;
}
/*
顶部banner图
*/
.topBanner{
  width: 100%;
  height: 300rpx;
  background-color: rebeccapurple
}
/*
活动+小喇叭
*/
.specialOffers{
  width: 100%;
  height: 60rpx;
  background-color: white; 
  /*子元素有浮动的话（float）要设置这个属性*/
  overflow: hidden;  
  font-size: 24rpx;
  border-bottom: 1rpx solid rgb(245, 246, 247);
}
.specialOffers image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 60rpx;
  margin-top: 10rpx;
  /*块级元素要横向排列  */
  float: left;
}
.discountText{
  /*行内元素变成块级元素  */
  display: block;
  float: left;
  margin-top:15rpx;
  margin-left:15rpx;
}
/*
    活动图
  */
.activity{
  width: 100%; 
  height: 350rpx;
  background-color: white;
  overflow: hidden; 
  
}
.activity image{
  float: left;
  width: 530rpx;
  height: 260rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
  margin-top: 30rpx;
}
.activity image:first-child{
  margin-right: 15rpx;
}
.redPacketBottomLeft{
  transform: translateX(-370rpx);
  transition: 0.3s ease 0s;
   
} 
.redPacketBottomRight{
  transform: translateX(0rpx);
  transition: 0.3s ease 0s;
} 
/*
今日爆品
*/
.hotSale,.recommand{
  width: 100%;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
}
.hotSaleGoods{
  width: 100%;
  /*父级元素写这个，子元素写flex：1就是1：1的比例  */
  display: flex;
  height: 300rpx; 

}
/*
为你推荐
*/
.recommendGoods{
  /* margin: 10rpx; */
  width: 100%;
  /* display: flex; */
  height: auto;
  overflow: hidden;
} 
.line{
  width: 5rpx;
  height: 100%;
  /* background-color:  */
}
/*父元素  */
.recommendProductTemplateBox{
  display: block;
  width: 50%;
  height: 350rpx;
  background-color: white;
  box-sizing: border-box;
  padding: 10rpx;
  float: left;
  /* margin: 10rpx 1rpx 10rpx 1rpx; */
}
/*图片  */
.recommendProductImage{
  height: 70%;
  width: 100%;
}
/*商品名称  */
.recommendProductName{
  height: 15%; 
  width: 100%;
  font-size: 32rpx;
  margin-top: 8rpx;
}
/*商品价格  */
.recommendDiscountPrice{
  width: 100%;
  height: 15%; 
  /* vertical-align: middle; */
  font-size: 32rpx;
}
.recommendDiscountPrice span {
  width: 40%;
  display: inline-block;
  vertical-align: middle;
}
.recommendDiscountPrice span:nth-child(1){
  color: rgb(79, 20, 124);
  font-size:30rpx;
}
.recommendDiscountPrice span:nth-child(2){
  color: rgb(183, 184, 186);
  font-size:28rpx;
  /*横线穿过中间的那种  */
  text-decoration: line-through;
}
/*添加到购物车  */
.shoppingCart{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  float: right; 
  margin-right: 25rpx;

  /* margin-bottom: 10rpx; */
} 
.shoppingCart image{
  width: 100%;
  height: 100%;
}
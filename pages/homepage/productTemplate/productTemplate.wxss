
.productTemplateBox{
  display: block;
  border: 1rpx solid rgb(245, 246, 247);
  height: 100%;
  background-color: white;
  /*跟父元素的display: flex;一起使用，按比例占空间  */
  flex: 1;
  padding: 15rpx; 
  /*宽定了，不会撑大盒子  */
  box-sizing: border-box;
  /*字体垂直居中  */
  /* vertical-align: middle; */
}
.productImage{
  width: 100%;
  height: 50%;
}
.productName{
  width: 100%;
  height: 17%;
  font-size: 30rpx;
  vertical-align: middle;
}
.discountPrice{
  width: 100%;
  height: 17%;
  /* vertical-align: middle; */
  margin-top: -5rpx;  
  margin-bottom: 5rpx;  
  vertical-align: middle;
}
.discountPrice span {
  width: 50%;
  display: inline-block;
  vertical-align: middle;
}
.discountPrice span:nth-child(1){
  color: rgb(79, 20, 124);
  font-size:30rpx;
}
.discountPrice span:nth-child(2){
  color: rgb(183, 184, 186);
  font-size:28rpx;
  /*横线穿过中间的那种  */
  text-decoration: line-through;
}
.salesAmount{
  width: 100%;
  height: 17%;
  font-size:24rpx;
  vertical-align: middle;
   color: rgb(183, 184, 186);  

}
